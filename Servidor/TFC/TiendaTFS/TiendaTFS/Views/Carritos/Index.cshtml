@model TiendaTFS.Models.Pedido

@{
    ViewData["Title"] = "Carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <h1>Carrito de la compra</h1>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Confirmado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Confirmado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Cliente.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Estado.Descripcion)
        </dd>
    </dl>
    <div>
        <table class="table border-bottom">
            <tr>
                <th></th>
                <th>Id Producto</th>
                <th>Descripcion del producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Descuento</th>
                <th>Total</th>
                <th></th>
            </tr>
            @foreach(var item in Model.Detalles)
            {
                <tr>
                    <td>
                        @{
                            var nombreImagen = "imagen-no-disponible.jpg";
                            if(item.Producto.Imagen != null)
                            {
                                nombreImagen = item.Producto.Imagen;
                            }
                        }
                        <img style="width:50px; height:50;" src="~/Imagenes/@nombreImagen" alt="No funciona" asp-append-version="true"/>
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </table>
    </div>
}
