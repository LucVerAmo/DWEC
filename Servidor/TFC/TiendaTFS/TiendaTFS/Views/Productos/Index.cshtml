@model IEnumerable<TiendaTFS.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Nuevo</a>
</p>
<form asp-action="Index">
    <div class="container">
        <div class="row align-items-start">
            <div class="col-md">
                <label class="control-label">Nombre producto:</label>
                <input type="text" name="strCadenaBusqueda"
                       value="@ViewData["BusquedaActual"]" class="form-control" />
            </div>
            <div class="col-md">
                <label class="control-label">Categoria:</label>
                <input type="text" name="strCadenaBusquedaCat"
                       value="@ViewData["BusquedaActual"]" class="form-control" />
            </div>
            <div class="col-md align-self-end">
                <input type="submit" value="Buscar" class="btn btn-default" /> |
                <a asp-action="Index" class="btn btn-default">Lista completa</a>
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            @*
            <th>
                @Html.DisplayNameFor(model => model.PrecioCadena)
            </th>
            *@
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Escaparate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            @*
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCadena)
            </td>
            *@
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                    @{
                        if(item.Escaparate == true)
                        {
                            <p>Se mostrara en el escaparate</p>
                        }
                        else
                        {
                            <p>No se mostrara en el escaparate</p>
                        }
                    }
                    @* @Html.DisplayFor(modelItem => item.Escaparate) *@
            </td>
            <td>
                    @{
                        var nombreImagen = "imagen-no-disponible.jpg";
                        if (item.Imagen != null)
                        {
                            nombreImagen = item.Imagen;
                        }
                        <img src="~/imagenes/@nombreImagen" height="250" width="250" asp-append-version="true" />
                    }
                @*@Html.DisplayFor(modelItem => item.Imagen)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
            </td>
            <td>
                <a asp-action="CambiarImagen" asp-route-id="@item.Id">Cambiar imagen del producto</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
