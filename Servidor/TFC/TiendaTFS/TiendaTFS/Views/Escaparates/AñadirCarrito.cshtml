@model TiendaTFS.Models.Producto
@{
    <div>
        <h4>Añadir producto al carrito</h4>
        <hr />
        <dl class="col-sm-10">
            <dd class="col-sm-10">
                <div>
                    @{
                        var nombreImagen = "imagen-no-disponible.jpg";
                        if (Model.Imagen != null)
                        {
                            nombreImagen = Model.Imagen;
                        }
                    }
                    <img src="~/Imagenes/@nombreImagen" style="width:200px height: 200px;" alt="No funcionia" asp-append-version="true" />
                </div>
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Texto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Texto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Precio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Categoria.Descripcion)
            </dd>
            <dt class="col-sm-2">

            </dt>
            <dd class="col-sm-10">
                <br />
                <form asp-action="AñadirCarrito">
                    <div class="form-group" hidden>
                        @Html.DisplayFor(model => model.Id)
                    </div>
                    @{
                        var stock = Model.Stock;
                    }
                    @if (stock <= 0)
                    {
                        <div class="form-group">
                            <input id="stock" type="submit" value="Añadir al carrito" class="btn btn-primary" asp-action="AñadirCarrito" hidden />
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <input id="stock" type="submit" value="Añadir al carrito" class="btn btn-primary" asp-action="AñadirCarrito" />
                        </div>
                    }
                </form>
            </dd>
        </dl>
    </div>
    <br />
    <div>
        <a asp-action="Index">Volver</a>
    </div>
}
